<% provide(:title, "Update income") %>

<h1>Update income</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @plan do |f| %>
      <%= f.label :income %>

      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.text_field :income, class: 'form-control' %>
      </div><br>

      <%= f.submit "Update income", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
