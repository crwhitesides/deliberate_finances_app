<% provide(:title, "Add payment") %>

<h1>Add payment to this purchase</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @payment, url: purchase_payments_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.hidden_field :user_id %>
      <%= f.hidden_field :purchase_id %>

      <%= f.label :amount %>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.text_field :amount, placeholder: "6.78", class: 'form-control' %>
      </div><br>

      <div class="form-group">
        <%= f.label :store %>
        <%= f.text_field :store, placeholder: "e.g. Amazon", class: "form-control" %>
      </div>

      <div class="checkbox">
        <label>
          <%= f.check_box :purchase_complete %> Finished paying for this
        </label>
      </div>

      <%= f.submit "Add payment", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
